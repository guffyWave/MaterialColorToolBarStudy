<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!--<item name="navigationBarColor">@color/primaryColorDark</item>-->
        <item name="colorControlHighlight">@color/controlHighlightColor</item>
        <item name="colorControlActivated">@color/controlActivatedColor</item>
        <item name="colorControlNormal">@color/controlNormalColor</item>
        <item name="colorButtonNormal">@color/controlNormalColor</item>


        <!--  -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base"></style>

</resources>
